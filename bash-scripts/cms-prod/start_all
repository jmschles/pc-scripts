current_dir=`pwd`
cms_pid=`screen -ls | grep cms_main | awk -F '.' '{print $1}'`
if [ -z "$cms_pid" ]
then
  cd ~/cms/current
  screen -S cms_main -d -m bundle exec unicorn -p 3002 -E production
  echo "cms started"
else
  echo "could not start cms: app is already running"
fi
cms_api_pid=`screen -ls | grep cms_api | awk -F '.' '{print $1}'`
if [ -z "$cms_api_pid" ]
then
  cd ~/cms_api/current
  screen -S cms_api -d -m bundle exec unicorn -p 3001 -E production
  echo "cms_api started"
else
  echo "could not start cms_api: app is already running"
fi
storage_pid=`screen -ls | grep storage | awk -F '.' '{print $1}'`
if [ -z "$storage_pid" ]
then
  cd ~/storage/current
  screen -S storage -d -m bundle exec unicorn -p 3003 -E production
  echo "storage started"
else
  echo "could not start storage: app is already running"
fi
